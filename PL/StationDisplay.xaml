<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:BO="clr-namespace:BO;assembly=BL" x:Class="PL.StationDisplay"
        mc:Ignorable="d"
        Title="StationDisplay" WindowState="Maximized" >
    
    <Grid Margin="0,0,-248,0" >

        <DataGrid x:Name="stationDataGrid" RowDetailsVisibilityMode="VisibleWhenSelected" Margin="520,10,414,10" ItemsSource="{Binding}" EnableRowVirtualization="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="codeColumn" Width="SizeToHeader" Header="מספר תחנה" Binding="{Binding Code}"/>
              
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
