<Window x:Class="PL.Simulation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Simulation" Height="450" Width="800">
    <Grid>
        <Button x:Name ="Button"  Content="Start" HorizontalAlignment="Left" Height="85"  VerticalAlignment="Center" Width="158" FontSize="16" FontFamily="Yu Gothic Medium" BorderBrush="black" BorderThickness="5" Click="Button_Click" />
        <TextBox x:Name="startTime" HorizontalAlignment="Center" Height="85"  TextWrapping="Wrap"  VerticalAlignment="Center" Width="158" FontSize="16" FontFamily="Yu Gothic Medium" BorderBrush="black" BorderThickness="5"/>
        <TextBox x:Name="Rate" HorizontalAlignment="Right" Height="85"  TextWrapping="Wrap"  VerticalAlignment="Center" Width="158" FontSize="16" FontFamily="Yu Gothic Medium" BorderBrush="black" BorderThickness="5"/>
    </Grid>
</Window>
